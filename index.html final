<div class="container" id="startScreen">
    <h1>Are You a Digital Humanist?</h1>
    <p>Step into the future where literature meets code.</p>
    <p>Discover your intellectual archetype.</p>
    <button onclick="startQuiz()">Start Game</button>
</div>

<div class="container hidden" id="quizScreen">
    <h2 id="question"></h2>
    <div id="options"></div>
</div>

<div class="container hidden" id="resultScreen">
    <h1>Your Result</h1>
    <h2 id="resultTitle"></h2>
    <p id="resultDescription"></p>
    <button onclick="restartQuiz()">Restart</button>
</div>

<script>
const questions = [
