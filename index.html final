{text:"Tech + Critique", type:"D"}
]
},
{
question: "In a futuristic city ruled by tech:",
options: [
{text:"I explore hidden archives", type:"A"},
{text:"I study system mechanics", type:"B"},
{text:"I follow branching stories", type:"C"},
{text:"I examine power structures", type:"D"}
]
},
{
question: "In a survival adventure game:",
options: [
{text:"Document the world", type:"A"},
{text:"Optimize strategy", type:"B"},
{text:"Experience emotions", type:"C"},
{text:"Understand political conflict", type:"D"}
]
},
{
question: "In a sci-fi series you notice:",
options: [
{text:"Cultural preservation", type:"A"},
{text:"Tech realism", type:"B"},
{text:"Relationships", type:"C"},
{text:"Social critique", type:"D"}
]
},
{
question: "If given research funding you would:",
options: [
{text:"Digitize traditions", type:"A"},
{text:"Build big datasets", type:"B"},
{text:"Create immersive narrative", type:"C"},
{text:"Study AI bias", type:"D"}
]
}
];

let currentQuestion = 0;
let scores = {A:0,B:0,C:0,D:0};

function startQuiz(){
document.getElementById("startScreen").classList.add("hidden");
document.getElementById("quizScreen").classList.remove("hidden");
showQuestion();
}

function showQuestion(){
const q = questions[currentQuestion];
document.getElementById("question").innerText = q.question;
const optionsDiv = document.getElementById("options");
optionsDiv.innerHTML = "";
q.options.forEach(option=>{
const btn = document.createElement("div");
btn.classList.add("option");
btn.innerText = option.text;
btn.onclick = ()=>{
scores[option.type]++;
currentQuestion++;
if(currentQuestion < questions.length){
showQuestion();
} else {
showResult();
}
};
optionsDiv.appendChild(btn);
});
}

function showResult(){
document.getElementById("quizScreen").classList.add("hidden");
document.getElementById("resultScreen").classList.remove("hidden");

let maxType = Object.keys(scores).reduce((a,b)=>scores[a]>scores[b]?a:b);

const results = {
A:{title:"The Digital Archivist", desc:"You preserve memory and culture in the digital age."},
B:{title:"The Data Humanist", desc:"You decode patterns and uncover meaning in data."},
C:{title:"The Narrative Innovator", desc:"You blend storytelling with technology."},
D:{title:"The Critical Technologist", desc:"You question power, bias, and digital systems."}
};

document.getElementById("resultTitle").innerText = results[maxType].title;
document.getElementById("resultDescription").innerText = results[maxType].desc;
}

function restartQuiz(){
currentQuestion = 0;
scores = {A:0,B:0,C:0,D:0};
document.getElementById("resultScreen").classList.add("hidden");
document.getElementById("startScreen").classList.remove("hidden");
}
</script>

